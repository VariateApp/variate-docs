@import url("https://fonts.googleapis.com/css?family=Hind:700|Poppins:400,600,700|Open+Sans:400,600,700&display=swap")

@tailwind base;
@tailwind components;
@tailwind utilities;

html, body
    @apply font-body;

.theme-container
    font-family "Open Sans", sans-serif

.theme-container h1, h2, h3, h4, h5, h6
    cursor pointer
    font-family Poppins, sans-serif

    .header-anchor
        @apply text-pink-500

.page h1, h2, h3, h4, h5, h6
    @apply mb-2 mt-4

.page p
    @apply mt-4 mb-6

.page blockquote
    @apply italic
    border-color theme('colors.pink.500')
    border-left-width 5px

    p
      @apply mt-2 mb-3

.page code
    @apply text-pink-500 bg-info-100 p-1

.page pre code
    @apply bg-transparent

h1
    @apply text-4xl

h2
    @apply text-3xl border-0

h3
    @apply text-2xl

h4
    @apply text-xl

h5
    @apply text-lg

h6
    @apply text-base
